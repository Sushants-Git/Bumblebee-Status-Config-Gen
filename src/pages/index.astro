<script></script>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100;200;300;400;500;600;700;800;900&display=swap");

  * {
    box-sizing: border-box;
  }

  :root {
    --bg-color: #101010;
    --primary-color: #ffffff;
    --primary-font: "Lexend Deca", sans-serif;
    --secondary-font: "Space Grotesk", sans-serif;
    --border-color: #282828;
  }

  body {
    background-color: var(--bg-color);
    color: var(--primary-color);
    font-family: var(--primary-font);
  }

  .container {
    /* width: 70vw; */
    height: max-content;
    margin: auto;
    margin-top: 7vh;
  }

  input {
    font-size: 1.25rem;
    background-color: var(--bg-color);
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    color: inherit;
    font-family: inherit;
    border: 1px solid var(--border-color);
  }

  .tags-wrapper {
    margin: auto;
    width: max-content;
    display: flex;
    gap: 20px;
    font-size: 1rem;
  }

  .tags-wrapper label {
    font-size: 1.25rem;
  }

  /* .tags-wrapper input {
    background-color: var(--bg-color);
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    color: inherit;
    font-family: inherit;
    font-size: 1.25rem;
    border: 1px solid var(--border-color);
  } */

  .tag {
    background-color: var(--primary-color);
    color: var(--bg-color);
  }

  #created-tags-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    align-items: center;
    gap: 5px;
  }

  #created-tags-wrapper span {
    padding: 4px 9px;
    border-radius: 3px;
    font-size: 1.25rem;
    border: 1px solid var(--border-color);
    background-color: var(--bg-color);
    color: var(--primary-color);
    cursor: pointer;
  }

  #created-tags-wrapper span:hover {
    border: 1px solid var(--primary-color);
    background: var(--primary-color);
    color: var(--bg-color);
  }

  .module-wrapper {
    margin-top: 30px;
    border-top: 2px dashed var(--border-color);
    padding-top: 30px;
  }

  .module-wrapper:nth-child(1) {
    border-top: none;
  }

  .output-text {
    margin-top: 30px;
    margin-bottom: 30px;
  }

  .output-text pre {
    font-family: var(--secondary-font);
    line-height: 1.2;
    font-size: 1rem;
    width: max-content;
    margin: auto;
    border: 2px dashed var(--border-color);
    padding: 1rem 2rem;
  }

  .parameters-wrapper {
    width: 70vw;
    margin: auto;
  }

  .parameters-input-wrappers input {
    font-size: 1rem;
  }

  .parameters-input-wrappers .name-and-description {
    margin-bottom: 10px;
    margin-top: 10px;
  }

  .change-default {
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .example {
    margin-left: 10px;
    color: var(--border-color);
  }
</style>
