---
import InputField from "../components/InputField";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Bumblebee Status Config Generator</title>
  </head>
  <body>
    <div class="container">
      <InputField client:load />
    </div>
  </body>
</html>

<script></script>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100;200;300;400;500;600;700;800;900&display=swap");

  * {
    box-sizing: border-box;
  }

  :root {
    --bg-color: #101010;
    --primary-color: #ffffff;
    --primary-font: "Lexend Deca", sans-serif;
    --secondary-font: "Space Grotesk", sans-serif;
    --border-color: #282828;
  }

  body {
    background-color: var(--bg-color);
    color: var(--primary-color);
    font-family: var(--primary-font);
    padding-bottom: 10vh;
  }

  .github-logo a {
    text-decoration: none;
    color: var(--primary-color);
    display: flex;
    gap: 10px;
    position: fixed;
    bottom: 20px;
    left: 20px;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    padding: 0.5rem;
    box-sizing: content-box;
    cursor: pointer;
  }

  .github-logo svg {
    width: 1rem;
    height: 1rem;
  }

  .github-logo a:hover {
    background-color: var(--border-color);
  }

  .container {
    /* width: 70vw; */
    height: max-content;
    margin: auto;
    margin-top: 7vh;
  }

  input {
    font-size: 1.25rem;
    background-color: var(--bg-color);
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    color: inherit;
    font-family: inherit;
    border: 1px solid var(--border-color);
    max-width: 390px;
  }

  select {
    font-size: 1.25rem;
    background-color: var(--bg-color);
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    color: inherit;
    font-family: inherit;
    border: 1px solid var(--border-color);
    min-width: 390px;

    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
    appearance: none;
  }

  .tags-wrapper {
    margin: auto;
    width: max-content;
    display: flex;
    gap: 20px;
    font-size: 1rem;
  }

  .tags-wrapper label {
    font-size: 1.25rem;
  }

  #tags-input-wrapper {
    width: 500px;
  }

  .tags-created {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .tags-created label {
    visibility: hidden;
    user-select: none;
  }

  .input-wrapper {
    display: flex;
    align-items: center;
    gap: 30px;
    margin-bottom: 10px;
    justify-content: space-between;
  }

  .input-wrapper input {
    width: 100%;
  }

  /* .tags-wrapper input {
    background-color: var(--bg-color);
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    color: inherit;
    font-family: inherit;
    font-size: 1.25rem;
    border: 1px solid var(--border-color);
  } */

  .tag {
    background-color: var(--primary-color);
    color: var(--bg-color);
  }

  .input-and-autocomplete-wrapper{
    width: 390px;
  }

  #created-tags-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    align-items: center;
    width: 100%;
    gap: 5px;
  }

  #created-tags-wrapper span {
    padding: 4px 9px;
    border-radius: 3px;
    font-size: 1.25rem;
    border: 1px solid var(--border-color);
    background-color: var(--bg-color);
    color: var(--primary-color);
    cursor: pointer;
  }

  #created-tags-wrapper span:hover {
    border: 1px solid var(--primary-color);
    background: var(--primary-color);
    color: var(--bg-color);
  }

  .module-wrapper {
    margin-top: 30px;
    border-top: 2px dashed var(--border-color);
    padding-top: 30px;
  }

  .module-wrapper:nth-child(1) {
    border-top: none;
  }

  .name {
    display: inline-block;
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 7px;
  }

  .description {
    /* display: inline-block; */
    font-size: 1rem;
    margin-bottom: 14px;
  }

  .output-text {
    margin-top: 30px;
    margin-bottom: 30px;
  }

  .output-text pre {
    position: relative;
    font-family: var(--secondary-font);
    line-height: 1.2;
    font-size: 1rem;
    width: max-content;
    margin: auto;
    border: 2px dashed var(--border-color);
    padding: 1rem 2rem;
  }

  .copy-button {
    position: absolute;
    bottom: 15px;
    right: 15px;
    border: 1px solid var(--border-color);
    height: 40px;
    width: 40px;
    color: var(--primary-color);
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-color);
    border-radius: 9px;
    padding: 5px;
  }

  .copy-button:hover {
    background-color: var(--border-color);
  }

  .parameters-wrapper {
    width: 70vw;
    margin: auto;
  }

  .dependencies {
    font-size: 1.25rem;
    font-weight: bold;
    margin-right: 1rem;
  }

  .contrib-links {
    text-decoration: none;
    color: #48baff;
  }

  .parameters-name {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 7px;
  }

  .parameters-input-wrappers input {
    font-size: 1rem;
  }

  .name-and-description-wrapper {
    display: flex;
    flex-direction: column;
    gap: 7px;
    margin-bottom: 16px;
  }

  .parameters-input-wrappers .name-and-description {
    margin-bottom: 10px;
    margin-top: 10px;
  }

  .change-default-wrapper {
    display: flex;
    align-items: center;
    align-items: center;
    gap: 5px;
    margin-bottom: 10px;
  }

  .change-default {
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .example {
    margin-left: 10px;
    color: var(--border-color);
  }
</style>
